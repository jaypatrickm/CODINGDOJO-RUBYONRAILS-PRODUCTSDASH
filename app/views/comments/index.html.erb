<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h3>All Comments</h3>
		</div>
		<div class="col-sm-12">
			<div class="table-responsive">
			<table id="product-listings" class="table table-bordered table-hover table-striped">
				<thead>
					<tr>
						<th>Comments</th>
						<th>Products</th>
					</tr>
				</thead>
				<tbody>
					<% @comments.each do |comment| %>
					<tr>
						<td><%= comment.content %></td>
						<td><%= comment.name %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			</div>
		</div>
		<div class="col-sm-12">
			<a href="/products/" class="btn btn-link">Back</a>
		</div>
	</div>
</div>