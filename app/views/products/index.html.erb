<div class="container">
	<div class="row">
		<div class="cols-sm-12">
			<h3>Listing Products</h3>
			<table id="product-listings" class="table table-bordered table-hover table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Price</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td><%= product.name %></td>
						<td><%= product.description %></td>
						<td><%= product.pricing %></td>
						<td>
							<a href="/products/<%= product.id %>" class="btn btn-link">Show</a> | 
							<a href="/products/<%= product.id %>/edit" class="btn btn-link">Edit</a> | 
							<form class="form-inline" action="/products/<%= product.id %>" method="post">
								<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
								<input type="hidden" name="_method" value="delete">
								<input type="submit" class="btn btn-link" value="Destroy">
							</form>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<a href="/products/new" class="btn btn-link">New Product</a>
		</div>
	</div>
</div>